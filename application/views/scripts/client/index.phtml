		var spacer = {
									 xtype: 'tbspacer',
									 height: '25px'
								 };

	 Ext.define('Main', {
	     extend: 'Ext.container.Container',
	     xtype: 'app-main'
	     ,items: [spacer,
				 				menu,
								spacer,
				 				grid ]
	 });


	 Ext.application({
	     name: 'Clients',

	     launch : function() {
	         Ext.create("Main", {
	             renderTo : Ext.getBody()
	         });
					 store.loadPage(1);
	     }
	 });


</script>
